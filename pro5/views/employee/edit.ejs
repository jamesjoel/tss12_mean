<%- include('../header'); %>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <h1>Employee Edit</h1>
                        <form action="/employee/update/<%= result._id %>" method="post">
                        <div class="card">
                            <div class="card-header">Edit Employee</div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input name="full_name" value="<%= result.full_name %>" type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" value="<%= result.email %>" name="email" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <textarea class="form-control" name="address"><%= result.address %></textarea>
                                </div>
                                <div class="form-group">
                                    <label>City</label>
                                    <select class="form-control" name="city">
                                        <option>Select</option>
                                        <option <% if(result.city=="Indore"){ %> selected <% } %>>Indore</option>
                                        <option <% if(result.city=="Mumbai"){ %> selected <% } %>>Mumbai</option>
                                        <option <% if(result.city=="Pune"){ %> selected <% } %>>Pune</option>
                                        <option <% if(result.city=="Indore"){ %> selected <% } %>>Bhopal</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Gender</label>
                                    <Br />
                                    Male <input type="radio" <% if(result.gender=="male"){ %> checked <% } %> value="male" name="gender" />
                                    Female <input type="radio" <% if(result.gender=="female"){ %> checked <% } %> value="female" name="gender" />
                                </div>
                                <div class="form-group">
                                    <label>Contact</label>
                                    <input type="text" value="<%= result.contact %>" class="form-control" name="contact" />
                                </div>
                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Update" class="btn btn-primary" />
                                <a href="/employee" class="btn btn-danger">Cancel</a>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

