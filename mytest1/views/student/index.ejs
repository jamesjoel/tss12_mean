<%- include('../header'); %>
    <div class="col-md-12">
        <h2 class="text-center">Student Page</h2>
        <button class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add New Student</button>
        <div class="row">
            <div class="col-md-8 offset-md-2 mt-3">
                <table class="table table-success table-bordered table-hover">
                    <tr>
                        <th>S.No.</th>
                        <th>Full Name</th>
                        <th>Fee</th>
                        <th>Adderss</th>
                        <th>Gender</th>
                        <th>Class</th>
                    </tr>

                    <% result.forEach(function(x, n){ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= x.full_name %></td>
                            <td><%= x.fee %></td>
                            <td><%= x.address %></td>
                            <td><%= x.gender %></td>
                            <td><%= x.class %></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/student" method="post">
                <div class="modal-header"><h4>Add New Student</h4></div>
                <Div class="modal-body">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input name="full_name" type="text" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <label>Fee</label>
                        <input name="fee" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea name="address" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Class</label>
                        <select name="class" class="form-control">
                            <option>Select Class</option>
                            <option>9th</option>
                            <option>10th</option>
                            <option>11th</option>
                            <option>12th</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <br />
                        Boy <input type="radio" name="gender" value="boy" />
                        Girl <input type="radio" name="gender" value="girl" />
                    </div>
                </Div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
                </form>
            </div>
        </div>
    </div>




    <%- include('../footer'); %>