<%- include('../header'); %>
<div class="col-md-8 mt-3 offset-md-2">
    <form action="/student/update/<%= result._id %>" method="post">
    <div class="card">
        <div class="card-header">
            <b>Edit Student Information</b>

        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Full Name</label>
                <input name="full_name" value="<%= result.full_name %>" type="text" class="form-control" />
            </div>
            
            <div class="form-group">
                <label>Fee</label>
                <input name="fee" value="<%= result.fee %>" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea name="address" class="form-control"><%= result.address %></textarea>
            </div>
            <div class="form-group">
                <label>Class</label>
                <select name="class" class="form-control">
                    <option>Select Class</option>
                    <option <% if(result.class =='9th'){ %> selected <% } %> >9th</option>
                    <option <% if(result.class =='10th'){ %> selected <% } %>>10th</option>
                    <option <% if(result.class =='11th'){ %> selected <% } %>>11th</option>
                    <option <% if(result.class =='12th'){ %> selected <% } %>>12th</option>
                </select>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <br />
                Boy <input type="radio"  <% if(result.gender =='boy'){ %> checked <% } %> name="gender" value="boy" />
                Girl <input type="radio" <% if(result.gender =='girl'){ %> checked <% } %> name="gender" value="girl" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Edit</button>
            <a href="/student" class="btn btn-danger">Cancel</a>
        </div>
    </div>
    </form>
</div>

<%- include('../footer'); %>